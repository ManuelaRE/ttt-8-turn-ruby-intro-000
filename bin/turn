#!/usr/bin/env ruby
require_relative '../lib/turn'

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
puts "Welcome to Tic Tac Toe!"
display_board(board)


move(board,index)
turn(board)

def turn(board)
  puts "Please enter 1-9:"
  input = gets.strip
  index = input_to_index(input)
if  valid_move?(board, index)
  move(board, index, current_player = "X")
else valid_move?(board, index) == false
input = gets.strip
end
display_board(board)
end
